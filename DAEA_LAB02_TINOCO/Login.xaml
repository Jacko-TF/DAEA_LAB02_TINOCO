<Window x:Class="DAEA_LAB02_TINOCO.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAEA_LAB02_TINOCO"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel Width="150" Height="200" Background="#F0FFEA">
            <TextBlock Margin="5" FontSize="16"> <Bold>Inicio de sesión</Bold></TextBlock>
            
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="5">Nombre de Usuario</TextBlock>
                <TextBox x:Name="txtusername" Margin="5"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Margin="5">Contraseña</TextBlock>
                <TextBox x:Name="txtpassword" Margin="5"></TextBox>
           </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="Button_Click" Margin="10" Background="#D9FFCB">Iniciar sesión</Button>
                <Button Click="Button_Click1" Margin="10" Background="#D9FFCB">Salir</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
