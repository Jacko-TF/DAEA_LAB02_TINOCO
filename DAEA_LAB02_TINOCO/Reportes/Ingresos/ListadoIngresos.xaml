<Window x:Class="DAEA_LAB02_TINOCO.Reportes.Ingresos.ListadoIngresos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAEA_LAB02_TINOCO.Reportes.Ingresos"
        mc:Ignorable="d"
        Title="ListadoIngresos" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="20">
            <TextBlock FontSize="30">Listado de Ingresos</TextBlock>

            <StackPanel Orientation="Vertical" Margin="10">

                <StackPanel HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Margin="2">Nombre Conductor</TextBlock>
                        <TextBox x:Name="txtConductor" Margin="2"></TextBox>
                        <Button Click="Button_Click">Buscar</Button>
                    </StackPanel>
                    <DataGrid x:Name="IngresosDataGrid">

                    </DataGrid>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
